<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home"
    tools:layout_editor_absoluteY="73dp">

    <TextView
        android:id="@+id/lb_User"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="4dp"
        android:text="Usuario"
        app:layout_constraintBottom_toTopOf="@+id/txb_user"
        app:layout_constraintStart_toStartOf="@+id/lb_adote"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <EditText
        android:id="@+id/txb_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="22dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:id="@+id/lb_Password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Senha"
        app:layout_constraintEnd_toEndOf="@+id/txb_password"
        app:layout_constraintStart_toStartOf="@+id/txb_password"
        app:layout_constraintTop_toBottomOf="@+id/txb_user" />

    <EditText
        android:id="@+id/txb_password"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_marginBottom="17dp"
        android:layout_marginTop="18dp"
        android:ems="10"
        android:inputType="textPassword"
        app:layout_constraintBottom_toTopOf="@+id/bt_Register"
        app:layout_constraintStart_toStartOf="@+id/txb_user"
        app:layout_constraintTop_toTopOf="@+id/lb_Password" />

    <Button
        android:id="@+id/bt_Login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:text="Login"
        app:layout_constraintStart_toStartOf="@+id/txb_password"
        app:layout_constraintTop_toBottomOf="@+id/txb_password" />

    <Button
        android:id="@+id/bt_Register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:text="Registrar"
        app:layout_constraintEnd_toEndOf="@+id/txb_password"
        app:layout_constraintTop_toBottomOf="@+id/lb_Password" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="13dp"
        android:layout_marginStart="57dp"
        android:layout_marginTop="71dp"
        app:layout_constraintEnd_toStartOf="@+id/lb_adote"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher_round" />

    <TextView
        android:id="@+id/lb_adote"
        android:layout_width="0dp"
        android:layout_height="23dp"
        android:layout_marginBottom="24dp"
        android:layout_marginEnd="99dp"
        android:layout_marginTop="29dp"
        android:text="PetLove"
        app:layout_constraintBottom_toTopOf="@+id/lb_User"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/imageView" />

</android.support.constraint.ConstraintLayout>