<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/register"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/lb_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="16dp"
        android:layout_toEndOf="@+id/textView3"
        android:text="Nome" />

    <EditText
        android:id="@+id/txb_name"
        android:layout_width="wrap_content"
        android:layout_height="26dp"
        android:layout_alignStart="@+id/lb_name"
        android:layout_below="@+id/lb_name"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/lb_Email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/lb_name"
        android:layout_below="@+id/txb_name"
        android:text="E-Mail" />

    <EditText
        android:id="@+id/txb_email"
        android:layout_width="wrap_content"
        android:layout_height="26dp"
        android:layout_alignStart="@+id/lb_name"
        android:layout_below="@+id/lb_Email"
        android:ems="10"
        android:inputType="textEmailAddress" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txt_city"
        android:layout_marginStart="0dp"
        android:text="CEP" />

    <EditText
        android:id="@+id/txb_postalCode"
        android:layout_width="89dp"
        android:layout_height="26dp"
        android:layout_alignStart="@+id/lb_name"
        android:layout_below="@+id/textView3"
        android:ems="10"
        android:inputType="textPostalAddress" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/lb_name"
        android:layout_below="@+id/txb_postalCode"
        android:text="Endereço" />

    <EditText
        android:id="@+id/txb_street"
        android:layout_width="180dp"
        android:layout_height="26dp"
        android:layout_alignStart="@+id/lb_name"
        android:layout_below="@+id/textView4"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/txb_name"
        android:layout_alignTop="@+id/textView4"
        android:text="Nº" />

    <EditText
        android:id="@+id/txb_number"
        android:layout_width="39dp"
        android:layout_height="26dp"
        android:layout_alignStart="@+id/textView5"
        android:layout_below="@+id/textView4"
        android:ems="10"
        android:inputType="number" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/lb_name"
        android:layout_below="@+id/txb_email"
        android:text="Cidade" />

    <EditText
        android:id="@+id/txt_city"
        android:layout_width="132dp"
        android:layout_height="26dp"
        android:layout_alignStart="@+id/lb_name"
        android:layout_below="@+id/textView6"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txb_email"
        android:layout_toEndOf="@+id/txb_street"
        android:text="Estado" />

    <Spinner
        android:id="@+id/spinnerState"
        android:layout_width="wrap_content"
        android:layout_height="26dp"
        android:layout_below="@+id/textView6"
        android:layout_toEndOf="@+id/txb_street" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/lb_name"
        android:layout_below="@+id/txb_street"
        android:text="Usuario" />

    <EditText
        android:id="@+id/txb_user"
        android:layout_width="96dp"
        android:layout_height="26dp"
        android:layout_alignStart="@+id/lb_name"
        android:layout_below="@+id/textView8"
        android:ems="10"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/txb_password"
        android:layout_width="101dp"
        android:layout_height="26dp"
        android:layout_alignStart="@+id/lb_name"
        android:layout_below="@+id/textView9"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/lb_name"
        android:layout_below="@+id/txb_user"
        android:text="Senha" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/txb_user"
        android:layout_marginEnd="105dp"
        android:text="Confirmação de Senha" />

    <EditText
        android:id="@+id/txb_passwordConfimation"
        android:layout_width="101dp"
        android:layout_height="26dp"
        android:layout_alignStart="@+id/textView10"
        android:layout_alignTop="@+id/txb_password"
        android:ems="10"
        android:inputType="textPassword" />
</RelativeLayout>
